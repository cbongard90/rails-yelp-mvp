<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<h3>Reviews</h3>
<ul>
  <% @reviews.each do |review| %>
  <li><%= review.content %> | <%= review.rating %></li>
  <% end %>
</ul>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class:'btn btn-warning' %>
<%= link_to 'Go back', restaurants_path, class:'btn btn-primary' %>
